<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.AustinTours" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="android:fontFamily">@font/palanquin_dark</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <!-- Attraction Item Card View -->
  <style name="attractionCardView" parent="Theme.AustinTours">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/marginCardView</item>
    <item name="android:elevation">@dimen/elevationCardView</item>
    <item name="android:gravity">center</item>
  </style>

  <!-- Attraction Image -->
  <style name="imageAttraction">
    <item name="android:layout_width">@dimen/attractionPhotoWidth</item>
    <item name="android:layout_height">@dimen/attractionPhotoHeight</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:scaleType">center</item>
    <item name="android:layout_marginTop">@dimen/photoMarginBelowName</item>
    <item name="android:layout_marginStart">@dimen/defaultListViewMargin</item>
    <item name="android:layout_marginEnd">@dimen/defaultListViewMargin</item>
    <item name="android:layout_marginBottom">@dimen/defaultListViewMargin</item>
  </style>

  <!-- Custom Tab Theme -->
  <style name="customTabLayout" parent="Widget.Design.TabLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="tabTextAppearance">@style/customTabLayoutText</item>
    <item name="tabGravity">fill</item>
  </style>

  <!-- Custom Tab Text -->
  <style name="customTabLayoutText" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">@dimen/customTabTextSize</item>
  </style>

  <!-- App Title Text -->
  <style name="appTitle" parent="Theme.AustinTours">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:padding">@dimen/appbar_padding</item>
    <item name="android:gravity">center</item>
    <item name="android:minHeight">?actionBarSize</item>
    <item name="android:text">@string/app_name</item>
    <item name="android:textAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title</item>
  </style>

  <!-- Attraction TextView -->
  <style name="parentTextStyle" parent="Theme.AustinTours">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
  </style>

  <!-- Attraction Name -->
  <style name="attractionName" parent="parentTextStyle">
    <item name="android:textSize">@dimen/nameTextSize</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_margin">@dimen/defaultListViewMargin</item>
  </style>

  <!-- Attraction Days/Hours Availability Icon -->
  <style name="attractionHoursIcon" parent="parentTextStyle">
    <item name="android:layout_marginTop">@dimen/infoMarginBelowName</item>
    <item name="android:layout_marginBottom">@dimen/attractionInfoMargin</item>
    <item name="android:layout_marginEnd">@dimen/defaultListViewMargin</item>
    <item name="android:layout_marginStart">@dimen/defaultListViewMargin</item>
    <item name="android:src">@drawable/ic_attraction_hours</item>
  </style>

  <!-- Attraction Website Icon -->
  <style name="attractionWebsiteIcon" parent="parentTextStyle">
    <item name="android:layout_marginTop">@dimen/attractionInfoMargin</item>
    <item name="android:layout_marginBottom">@dimen/attractionInfoMargin</item>
    <item name="android:layout_marginEnd">@dimen/defaultListViewMargin</item>
    <item name="android:src">@drawable/ic_attraction_website</item>
    <item name="android:layout_marginStart">@dimen/defaultListViewMargin</item>
  </style>

  <!-- Attraction Address Icon -->
  <style name="attractionAddressIcon" parent="parentTextStyle">
    <item name="android:layout_marginTop">@dimen/attractionInfoMargin</item>
    <item name="android:layout_marginBottom">@dimen/attractionInfoMargin</item>
    <item name="android:layout_marginEnd">@dimen/defaultListViewMargin</item>
    <item name="android:src">@drawable/ic_attraction_location</item>
    <item name="android:layout_marginStart">@dimen/defaultListViewMargin</item>
  </style>

  <!-- Attraction Days/Hours Availability -->
  <style name="attractionHours" parent="parentTextStyle">
    <item name="android:textSize">@dimen/hoursTextSize</item>
    <item name="android:text">@string/hours</item>
    <item name="android:textColor">@color/colorLink</item>
    <item name="android:layout_marginStart">@dimen/listItemTextStartMargin</item>
    <item name="android:background">?selectableItemBackground</item>
  </style>

  <!-- Attraction Address -->
  <style name="attractionAddress" parent="parentTextStyle">
    <item name="android:textSize">@dimen/addressTextSize</item>
    <item name="android:text">@string/address</item>
    <item name="android:textColor">@color/colorLink</item>
    <item name="android:layout_marginBottom">@dimen/attractionInfoMargin</item>
    <item name="android:layout_marginStart">@dimen/listItemTextStartMargin</item>
    <item name="android:background">?selectableItemBackground</item>
  </style>

  <!-- Attraction Website -->
  <style name="attractionWebsite" parent="parentTextStyle">
    <item name="android:textSize">@dimen/addressTextSize</item>
    <item name="android:text">@string/website</item>
    <item name="android:textColor">@color/colorLink</item>
    <item name="android:layout_marginBottom">@dimen/attractionInfoMargin</item>
    <item name="android:layout_marginStart">@dimen/listItemTextStartMargin</item>
    <item name="android:background">?selectableItemBackground</item>
  </style>

  <!-- List View -->
  <style name="listView" parent="Theme.AustinTours">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
  </style>

  <!-- Action Bar -->
  <style name="Theme.AustinTours.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <!-- App Bar Overlay -->
  <style name="Theme.AustinTours.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <!-- Popup Overlay -->
  <style name="Theme.AustinTours.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <!-- Alert Dialog -->
  <style name="alertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
    <item name="android:textSize">@dimen/alertTitleTextSize</item>
    <item name="android:fontFamily">@font/palanquin_dark</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="colorPrimary">@color/colorLink</item>
  </style>

</resources>