<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/constraintLayout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  app:layout_constrainedHeight="true"
  app:layout_constrainedWidth="true">

  <!-- Attraction Photo -->
  <ImageView
    android:id="@+id/image_attraction"
    style="@style/imageAttraction"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toTopOf="@+id/guideline_bottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/guideline_middle"
    app:layout_constraintTop_toTopOf="parent" />

  <!-- Attraction Name -->
  <TextView
    android:id="@+id/text_attraction_name"
    style="@style/attractionName"
    android:text="Attraction"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toTopOf="@+id/text_attraction_days"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <!-- Attraction Operating Days -->
  <TextView
    android:id="@+id/text_attraction_days"
    style="@style/attractionAvailability"
    android:text="Days"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toTopOf="@+id/text_attraction_hours"
    app:layout_constraintStart_toStartOf="@+id/text_attraction_name"
    app:layout_constraintTop_toBottomOf="@+id/text_attraction_name" />

  <!-- Attraction Operating Hours -->
  <TextView
    android:id="@+id/text_attraction_hours"
    style="@style/attractionAvailability"
    android:text="Hours"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toTopOf="@+id/text_attraction_address"
    app:layout_constraintEnd_toEndOf="@+id/text_attraction_days"
    app:layout_constraintStart_toStartOf="@+id/text_attraction_days"
    app:layout_constraintTop_toBottomOf="@+id/text_attraction_days" />

  <!-- Attraction Address -->
  <TextView
    android:id="@+id/text_attraction_address"
    style="@style/attractionAddress"
    android:text="Address"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toTopOf="@+id/divider_attraction_end"
    app:layout_constraintEnd_toEndOf="@+id/text_attraction_hours"
    app:layout_constraintStart_toStartOf="@id/text_attraction_hours"
    app:layout_constraintTop_toBottomOf="@+id/text_attraction_hours" />

  <!-- Divider -->
  <View
    android:id="@+id/divider_attraction_end"
    style="@style/listDivider"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_attraction_address" />

  <!-- Middle Guide -->
  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_middle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="259dp" />

  <!-- Bottom Guide -->
  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="150dp"
    app:layout_constraintTop_toBottomOf="@id/guideline_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>